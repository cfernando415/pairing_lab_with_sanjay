<% if @author.errors.any? %>
<div id="error_explanation">
  <ul>
  <% @author.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<h1>New Author</h1>
<%= form_for @author do |f| %>
<p><%= f.label :name %><%= f.text_field :name %></p>
<p><%= f.label :birth_year %><%= f.text_field :birth_year %></p>
<p><%= f.submit %></p>
<% end %>
